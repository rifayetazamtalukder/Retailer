@model Retailer.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-info">Product Details</h1>
<br />

<div>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDetails)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDetails)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductFreeze)
        </dt>
        <dd class="col-sm-10">
            @if (@Model.ProductFreeze == true)
            {
                <span>true</span>
            }
            else
            {
                <span>true</span>
            }
        </dd>

        <dt class="col-sm-2">
            Product Image
        </dt>
        <dd class="col-sm-10">
            <img class="card-img-top img-fluid img-thumbnail" src="@("~/Images/Products/" + Model.ProductImageName)" asp-append-version="true" style="width: 60%;" alt="item.ProductImageName">
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-info">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
