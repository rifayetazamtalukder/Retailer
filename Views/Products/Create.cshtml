@model Retailer.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4 class="text-info text-center mt-5 mb-4 border py-3 bg-dark">Add a New Product</h4>
<div class="row">
    <div class="col-md-6 border" style="margin: auto">
        <form asp-action="Create" enctype="multipart/form-data" class="p-3">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProductCode" class="control-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDetails" class="control-label"></label>
                <textarea asp-for="ProductDetails" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ProductDetails" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ProductFreeze" /> @Html.DisplayNameFor(model => model.ProductFreeze)
                </label>
            </div>

            <div class="form-group">
                <label asp-for="ProductImageFile" class="control-label"></label>
                <input asp-for="ProductImageFile" accept="image/*" />
                <span asp-validation-for="ProductImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">Back to List</a>
</div>

