@model Retailer.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="border py-2 bg-warning text-white text-center">Edit Product</h1>
<br />

<div class="row">
    <div class="col-md-6 border" style="margin: auto">
        <form asp-action="Edit" enctype="multipart/form-data" class="p-3">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDetails" class="control-label"></label>
                <textarea asp-for="ProductDetails" class="form-control" rows="5"></textarea>
                <span asp-validation-for="ProductDetails" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ProductFreeze" /> @Html.DisplayNameFor(model => model.ProductFreeze)
                </label>
            </div>

            <div class="form-group">
                <label class="control-label">Previous Image</label>
                <img class="card-img-top img-fluid img-thumbnail"
                     src="@("~/Images/Products/" + Model.ProductImageName)"
                     asp-append-version="true" style="width: 30%;" alt="item.ProductImageName">
            </div>

            <div class="form-group">
                <label class="control-label">Change Image</label>
                <input asp-for="ProductImageFile" accept="image/*" />
                <span asp-validation-for="ProductImageFile" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <input type="hidden" asp-for="ProductId" />
    <a asp-action="Index" class="btn btn-warning">Back to List</a>
</div>

